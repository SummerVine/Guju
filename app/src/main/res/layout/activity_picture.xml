<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
     android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/ll_title_id"
        android:layout_width="match_parent"
        android:layout_height="50dp">
    <TextView
        android:id="@+id/tv_title_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="图库"
        android:textSize="25sp"
        android:textColor="#000000"
        android:layout_marginTop="15dp" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_select_id"
        android:layout_below="@+id/ll_title_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_space_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="空间"
                android:textSize="20dp"
                android:textColor="#000000"/>
            <CheckBox
                android:id="@+id/iv_space_id"
                android:layout_width="25dp"
                android:layout_height="15dp"
                android:button="@null"
                android:layout_marginLeft="30dp"
                android:background="@drawable/picture_selector"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_style_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="风格"
                android:textSize="20dp"
                android:textColor="#000000"/>
            <CheckBox
                android:id="@+id/iv_style_id"
                android:layout_width="25dp"
                android:layout_height="15dp"
                android:button="@null"
                android:layout_marginLeft="30dp"
                android:background="@drawable/picture_selector"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_color_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="颜色"
                android:textSize="20dp"
                android:textColor="#000000"/>
            <CheckBox
                android:id="@+id/iv_color_id"
                android:layout_width="25dp"
                android:layout_height="15dp"
                android:button="@null"
                android:layout_marginLeft="30dp"
                android:background="@drawable/picture_selector"/>
        </LinearLayout>
    </LinearLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swiperefreshlayout_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_select_id"
        android:layout_marginTop="1dp">
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rv_id">
        </android.support.v7.widget.RecyclerView>
    </android.support.v4.widget.SwipeRefreshLayout>
</RelativeLayout>