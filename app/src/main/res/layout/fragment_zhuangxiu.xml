<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:layout_marginTop="15dp"
        android:text="@string/strategy"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:id="@+id/ll_container_id">
        <TextView
            android:id="@+id/tv_qian_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#000000"
            android:text="@string/qian"
            android:layout_gravity="center_vertical"
            />
        <ImageView
            android:id="@+id/iv_qian_id"
            android:layout_width="15dp"
            android:layout_height="10dp"
            android:onClick="strategy_popupMenu"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="7dp"
           android:src="@drawable/picture_selector"
          />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zhong"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"
            android:textSize="20dp"
            android:textColor="#000000"/>
        <ImageView
            android:id="@+id/iv_zhong_id"
            android:layout_width="15dp"
            android:layout_height="10dp"
            android:onClick="strategy_popupMenu"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="7dp"
            android:src="@drawable/picture_selector"
          />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:text="@string/hou"
            android:layout_marginLeft="15dp"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_gravity="center_vertical"
 />
        <ImageView
            android:id="@+id/iv_hou_id"
            android:layout_width="15dp"
            android:layout_height="10dp"
            android:onClick="strategy_popupMenu"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="7dp"
            android:src="@drawable/picture_selector"
    />
    </LinearLayout>
    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/ptrl_id"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </com.handmark.pulltorefresh.library.PullToRefreshListView>

</LinearLayout>