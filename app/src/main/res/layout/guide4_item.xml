<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:id="@+id/iv_id"
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentLeft="true"
        />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="450dp"
        android:layout_height="120dp"
        android:layout_toRightOf="@+id/iv_id"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <TextView
                android:textColor="#000000"
                android:textSize="15sp"
                android:id="@+id/UserName_id"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="名称"
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/ordinary_designer_icon"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <TextView
                android:textColor="#000000"
                android:textSize="15dp"
                android:id="@+id/sex_id"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="女"
                />
            <TextView
                android:textColor="#000000"
                android:textSize="15dp"
                android:id="@+id/provice_id"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="北京"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="229dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="0.87">
            <TextView
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="案例："
                />
            <TextView
                android:textColor="#50B9F4"
                android:id="@+id/projectNum_id"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                />
            <TextView
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="攻略："
                />
            <TextView
                android:textColor="#50B9F4"
                android:id="@+id/producrLikeNum_id"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"

                />
            <TextView
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享："
                />
            <TextView
                android:textColor="#50B9F4"
                android:id="@+id/PhotoNum_id"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"

                />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
