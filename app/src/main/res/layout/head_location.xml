    android:layout_margin="10dp"
    android:textSize="15sp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/textview_head_id"
        android:textSize="15sp"
        android:layout_margin="10dp"
        android:textColor="#000000"
        android:clickable="true"
